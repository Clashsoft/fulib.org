{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "compilerOptions": {
    "webpack": true,
    "manualRestart": true
  },
  "projects": {
    "assignments": {
      "type": "application",
      "root": "apps/assignments",
      "entryFile": "main",
      "sourceRoot": "apps/assignments/src",
      "compilerOptions": {
        "tsConfigPath": "apps/assignments/tsconfig.app.json"
      }
    },
    "keycloak-auth": {
      "type": "library",
      "root": "libs/keycloak-auth",
      "entryFile": "index",
      "sourceRoot": "libs/keycloak-auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/keycloak-auth/tsconfig.lib.json"
      }
    },
    "projects": {
      "type": "application",
      "root": "apps/projects",
      "entryFile": "main",
      "sourceRoot": "apps/projects/src",
      "compilerOptions": {
        "tsConfigPath": "apps/projects/tsconfig.app.json"
      }
    },
    "not-found": {
      "type": "library",
      "root": "libs/not-found",
      "entryFile": "index",
      "sourceRoot": "libs/not-found/src",
      "compilerOptions": {
        "tsConfigPath": "libs/not-found/tsconfig.lib.json"
      }
    },
    "event": {
      "type": "library",
      "root": "libs/event",
      "entryFile": "index",
      "sourceRoot": "libs/event/src",
      "compilerOptions": {
        "tsConfigPath": "libs/event/tsconfig.lib.json"
      }
    },
    "moss": {
      "type": "library",
      "root": "libs/moss",
      "entryFile": "index",
      "sourceRoot": "libs/moss/src",
      "compilerOptions": {
        "tsConfigPath": "libs/moss/tsconfig.lib.json"
      }
    }
  }
}
